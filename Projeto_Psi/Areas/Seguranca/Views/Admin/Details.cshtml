@model Projeto_Psi.Areas.Seguranca.Models.UsuarioViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Visualizando detalhes de um USUÁRIO";
}
<div class="panel panel-primary">
    <div class="panel-heading">
        Visualizando detalhes de um USUÁRIO
    </div>
    <div class="panel-body">
        @Html.Partial("~/Areas/Seguranca/Views/Admin/_PartialDetailsContentPanel.cshtml", Model)
    </div>
    <div class="panel-footer panel-info">
        @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-danger" })
        @Html.ActionLink("Retornar para a listagem de USUÁRIOS", "Index", null, new { @class = "btn btn-warning" })
    </div>
</div>
@section ScriptPage {
    <script type="text/javascript">
        $(document).ready(function () {
            $('li').removeClass("active");
            $('#liUsuarios').addClass("active");
        });
    </script>
}