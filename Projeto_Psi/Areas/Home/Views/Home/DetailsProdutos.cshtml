@model Modelo.Cadastros.Produto
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Visualizando detalhes de um PRODUTO";
}
<div class="panel panel-primary">
    <div class="panel-heading">
        Visualizando detalhes de um PRODUTO
    </div>
    <div class="panel-body">
        @Html.Partial("~/Areas/Home/Views/Home/_PartialProdutos.cshtml", Model)
    </div>
    <div class="panel-footer panel-info">
        @Html.ActionLink("Retornar para a listagem de PRODUTOS", "Index", null, new { @class = "btn btn-warning" })
    </div>
</div>
@section styles{
    <link href="@Url.Content("~/content/DataTables/css/dataTables.bootstrap.css")" rel="stylesheet" />
}
@section ScriptPage{
    <script src="@Url.Content("~/scripts/DataTables/jquery.dataTables.js")"></script>
    <script src="@Url.Content("~/scripts/DataTables/dataTables.bootstrap.js")"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('li').removeClass("active");
            $('#liHome').addClass("active");
        });
    </script>
}
