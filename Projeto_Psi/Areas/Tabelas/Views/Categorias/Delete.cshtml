@model Modelo.Tabelas.Categoria

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Remover CATEGORIA";
}
<div class="panel panel-primary">
    <div class="panel-heading">
        Dados da categoria a ser removida
    </div>
    <div class="panel-body">
        @Html.Partial("~/Areas/Tabelas/Views/Categorias/_PartialDetailsContentPanel.cshtml", Model)
    </div>
    <div class="panel-footer panel-info">
        <a href="#" class="btn btn-danger" data-toggle="modal" data-target="#deleteConfirmationModal">Remover CATEGORIA</a>
        @Html.ActionLink("Retornar para a listagem de CATEGORIAS", "Index", null, new { @class = "btn btn-warning" })
    </div>
</div>
<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title">
                    Confirmação de exclusão de CATEGORIA
                </h4>
            </div>
            <div class="modal-body">
                <p>
                    Você está prestes a remover a categoria @Model.Nome.ToUpper() do cadastro.
                </p>
                <p>
                    <strong>
                        Você está certo que deseja prosseguir?
                    </strong>
                </p>
                @using (Html.BeginForm("Delete", "Categorias", FormMethod.Post,
                new { @id = "delete-form", role = "form" }))
                {
                    @Html.HiddenFor(m => m.CategoriaId)
                    @Html.AntiForgeryToken()
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" onclick="$('#delete-form').submit();">
                    Sim, exclua esta categoria.
                </button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">
                    Não, não exclua esta categoria.
                </button>
            </div>
        </div>
    </div>
</div>
@section ScriptPage{
    <script type="text/javascript">
        $(document).ready(function () {
            $('li').removeClass("active");
            $('#liCategorias').addClass("active");
        });
    </script>
}